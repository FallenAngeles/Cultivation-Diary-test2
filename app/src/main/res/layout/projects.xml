<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:id="@+id/projectBackground"
    android:background="@color/black">

     <androidx.cardview.widget.CardView
         android:layout_width="80dp"
         android:layout_height="80dp"
         android:elevation="12dp"
         android:id="@+id/iconProject"
         android:innerRadius="0dp"
         android:thicknessRatio="1.9"
         android:shape="ring"
         app:cardCornerRadius="40dp"
         android:layout_alignParentStart="true"
         android:layout_alignParentTop="true">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:id="@+id/icon_prj"
        android:src="@drawable/baseline_boy_24"
        android:scaleType="fitCenter"
        android:cropToPadding="true"
        android:maxHeight="40dp"
        android:maxWidth="40dp"/>
     </androidx.cardview.widget.CardView>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameProject"
        android:text="Experiment Experiment Experiment Experiment Experiment"
        android:maxHeight="25dp"
        android:textSize="20sp"
        android:paddingStart="4dp"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/iconProject"
        android:layout_alignParentEnd="true"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionProject"
        android:text="desription desription desription desription desription desription desription desription desription desription desription desription desription desription desription desription"
        android:textSize="11sp"
        android:paddingStart="4dp"
        android:textColor="@color/white"
        android:maxHeight="55dp"
        android:layout_below="@+id/nameProject"
        android:layout_toEndOf="@+id/iconProject"
        android:layout_alignBottom="@+id/iconProject"
        tools:ignore="RtlSymmetry" />
    
</RelativeLayout>